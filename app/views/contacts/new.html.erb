<div class="row">
  <div class="col-md-10 col-md-offset-1">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h1 class="panel-title">ติดต่อเรา</h1>
      </div>
      <div class="panel-body">

      <%= form_for(@contact, html: {:class => 'form-horizontal' }) do |f| %>
        
        <div class="form-group">
          <%= f.label :name, "ชื่อ", class: "col-md-4" %>
          <div class="col-md-6">
            <%= f.text_field :name, class: "form-control" %>
          </div>
        </div>

        <div class="form-group">
          <%= f.label :email, "อีเมล์", class: "col-md-4" %>
          <div class="col-md-6">
            <%= f.text_field :email, class: "form-control" %>
          </div>
        </div>

        <div class="form-group">
          <%= f.label :message, "ข้อความ", class: "col-md-4" %>
          <div class="col-md-6">
            <%= f.text_area :message, rows: 5, class: "form-control" %>
          </div>
        </div>
        
        <div class="form-group">
          <div class="col-md-6 col-md-offset-4">
            <%= button_tag(type: 'submit', class: "btn btn-primary") do %>
              <span class="glyphicon glyphicon-send"></span> ส่งข้อความ
            <% end %> 
          </div>
        </div>
      <% end %>
      
      </div>
    </div>
  </div>
