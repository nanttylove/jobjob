      <div class="row">
        <div class="col-md-12">
          <ol class="breadcrumb">
            <li><%= link_to "หน้าแรก", root_path %></li>
            <li class="active"><%= "ลงทะเบียน" %></li>
          </ol>
        </div>
      </div>

<div class="row">
  <div class="col-md-10 col-md-offset-1">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h1 class="panel-title">ลงทะเบียน</h1>
      </div>
      <div class="panel-body">

        <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: "form-horizontal"}) do |f| %>
        <%= devise_error_messages! %>

          <div class="form-group">
            <%= f.label :email, " อีเมล", class: "col-md-4" %>
            <div class="col-md-6">
              <%= f.email_field :email, autofocus: true, class: "form-control", placeholder: "อีเมล" %>
            </div>
          </div>

          <div class="form-group">
            <%= f.label :password, "รหัสผ่าน", class: "col-md-4" %>
            <div class="col-md-6">
              <% if @validatable %>
                <!-- <em>(<%= @minimum_password_length %> characters minimum)</em> -->
              <% end %>
              <%= f.password_field :password, autocomplete: "off", class: "form-control required", placeholder: "รหัสผ่าน" %>
            </div>
          </div>

          <div class="form-group">
            <%= f.label :password_confirmation, "ยืนยันรหัสผ่าน", class: "col-md-4" %>
            <div class="col-md-6">
              <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control required", placeholder: "ยืนยันรหัสผ่าน" %>
            </div>
          </div>

          <div class="form-group">
            <%= f.label :role_id, "ประเภทสมาชิก", class: "col-md-4" %>
            <div class="col-md-6">
              <%= f.select :role_id, options_from_collection_for_select(Role.all, :id, :name, @user.role_id), {} %>
            </div>
          </div>

          <div class="form-group">
            <div class="col-md-6 col-md-offset-4">
              <%= f.submit "ลงทะเบียน", class: "btn btn-primary" %>
              </div>
          </div>

        <% end %>

      </div>
    </div>
  </div>
</div>