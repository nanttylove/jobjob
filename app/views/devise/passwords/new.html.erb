<div class="row">
  <div class="col-md-10 col-lg-8 col-md-offset-1 col-lg-offset-2 col-md-center">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h1 class="panel-title">ลืมรหัสผ่าน</h1>
      </div>
      <div class="panel-body">

      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: "form-horizontal" }) do |f| %>
        <%= devise_error_messages! %>

        <div class="form-group">
          <%= f.label :email, " อีเมล", class: "col-md-4" %>
          <div class="col-md-6">
            <%= f.email_field :email, autofocus: true, class: "form-control", placeholder: "อีเมล" %>
          </div>
        </div>

        <div class="form-group">
          <div class="col-md-6 col-md-offset-4">
            <%= f.submit "ตั้งรหัสผ่านใหม่", class: "btn btn-primary" %>
          </div>
        </div>

      <% end %>

      </div>
    </div>
  </div>
</div>