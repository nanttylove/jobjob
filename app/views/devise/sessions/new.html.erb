      <div class="row">
        <div class="col-md-12">
          <ol class="breadcrumb">
            <li><%= link_to "หน้าแรก", root_path %></li>
            <li class="active"><%= "เข้าสู่ระบบ" %></li>
          </ol>
        </div>
      </div>

<div class="row">
  <div class="col-md-8 col-md-offset-2">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h1 class="panel-title">เข้าสู่ระบบ</h1>
      </div>
      <div class="panel-body">

      <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: "form-horizontal"}) do |f| %>

        <div class="form-group">
          <%= f.label :email, " อีเมล", class: "col-md-4" %>
          <div class="col-md-6">
            <%= f.email_field :email, autofocus: true, class: "form-control", placeholder: "อีเมล" %>
          </div>
        </div>

        <div class="form-group">
          <%= f.label :password, "รหัสผ่าน", class: "col-md-4" %>
          <div class="col-md-6">
            <%= f.password_field :password, autocomplete: "off", class: "form-control required", placeholder: "รหัสผ่าน" %>
          </div>
        </div>

        <% if devise_mapping.rememberable? -%>
          <div class="form-group">
            <div class="col-md-6 col-md-offset-4">
              <%= f.check_box :remember_me %>
              <%= f.label :remember_me, "จดจำการเข้าสู่ระบบ" %>
            </div>
          </div>
        <% end -%>

        <div class="form-group">
          <div class="col-md-6 col-md-offset-4">
            <%#= f.submit "เข้าสู่ระบบ", class: "btn btn-primary" %>
            <%= button_tag(type: 'submit', class: "btn btn-primary") do %>
              <span class="glyphicon glyphicon-log-in"></span> เข้าสู่ระบบ
            <% end %>
            <%= link_to new_password_path(resource_name), class: "btn btn-warning" do %>
              <span class="glyphicon glyphicon-question-sign"></span> ลืมรหัสผ่าน
            <% end %>
          </div>
        </div>

      <% end %>
      </div>
    </div>
  </div>
</div>